{% extends "base.twig" %}
{% block content %}
<div class="uk-section" data-template="index.twig">
  <div class="uk-container uk-container-large">
    <div class="uk-grid-large" uk-grid>
      <div id="MainArchiveIndex" class="uk-article uk-width-2-3@m">
        <h1 class="uk-article-title uk-margin-large-bottom">{{ title }}</h1>
        <div class="archive-posts uk-child-width-1-2" uk-grid>
          {% for post in posts %}
            {% include 'tease.twig' %}
          {% endfor %}
        </div>
        {% if posts > 4 %}
        <div class="uk-section">
          <a class="button uk-button uk-align-center uk-button-large uk-button-default organic_loadmore">load more</a>
        </div>
        {% endif %}
        {% if posts is empty %}
          <p class="uk-text-emphasis">No posts found.</p>
        {% endif %}
        {% include 'pagination.twig' %}
      </div>
      {% include 'sidebar.twig' %}
    </div>
  </div>
</div>
{% endblock %}