<!DOCTYPE html>
<html {{site.language_attributes}}>
<head>
  <meta charset="{{site.charset}}" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- wp header -->
  {{ function('wp_head') }}
  <!-- /wp header -->
  <style>
    h1, h2, h3, h4, h5, h6 {
      font-weight: bold;
    }
    .organic-social-icons a.icon {
      padding: 5px;
      background-color: rgba(92,92,92,0.15);
      border-radius: 100%;
      transition: background-color 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
    .organic-social-icons a.icon:hover {
      padding: 5px;
      background-color: rgba(92,92,92,0.05);
    }
    #SearchNav .navbar-extend {
      position: relative;
      top: unset;
      left: unset;
      transform: none;
      width: 100%;
    }
    .organic-logo {
      padding: 0 15px 0 0;
    }
    #MainNav .uk-navbar-nav>li>a {
      min-height: 60px;
      font-weight: bold;
      color: #fff;
      font-size: 1.1rem;
      text-transform: capitalize;
    }
    .megamenu {
      width: 100vw;
      margin-top: 0;
      left: 0!important;
      margin-left: calc(-100vw / 2 + 1420px / 2);
    }
    #ShopMegaMenu .uk-list>li>a {
      text-transform: capitalize;
      font-size: 1rem;
    }
    .come-back {
      top: auto!important;
    }
    del {
      text-decoration-color: #ff0000;
      text-decoration-style: solid;
      font-style: italic;
    }
    #ProductItem.grid-item ins>span.woocommerce-Price-amount, #ProductItem.grid-item span.woocommerce-Price-amount {
      background-color: #fff;
      font-size: 1.2rem;
      color: #299169;
    }
    #ProductItem.grid-item del>span.woocommerce-Price-amount {
      font-size: 1rem;
    }
    #LoopAddToCart .uk-button.loading {
      padding-right: 1.2rem;
    }
    #GridList .uk-button {
      padding: 0 10px;
    }
    #ProductItem.list-item span.woocommerce-Price-amount, #ProductItem.list-item ins>span.woocommerce-Price-amount {
        background-color: #fff;
        font-size: 1.6rem;
        color: #299169;
    }
    #ProductItem.list-item del>span.woocommerce-Price-amount {
        font-size: 1.4rem;
    }
    .uk-card-badge {
      position: absolute;
      top: 30px;
      right: auto;
      left: 30px;
      z-index: 1;
    }
    #ShopToolbar .uk-navbar-item, #ShopToolbar .uk-navbar-nav>li>a, #ShopToolbar .uk-navbar-toggle {
        min-height: 60px;
    }
  </style>
</head>
<!-- body classes go here -->
<body class="{{ body_class }}" data-template="base.twig">
  <!-- main site wrapper -->
  
  <div id="SiteWrapper" class="site-wrapper">
    <!-- header -->
    {% block header %}
      {#  % include 'header.twig' % #}
    {% endblock %}
    <!-- /header -->
    
    <!-- content -->
    <div id="MainContent">
      {% block content %}
        <p>Sorry, Nothing to Display!!</p>
      {% endblock %}
    </div>
    <!-- /content -->
    <div id="modal-cart" class="" uk-modal>
        <div class="uk-modal-dialog uk-margin-auto-vertical">
          <button class="uk-modal-close-default" type="button" uk-close></button>
          <div class="uk-modal-header">
              <h2 class="uk-modal-title">Modal Title</h2>
          </div>
          <div class="uk-modal-body uk-child-width-1-2 uk-grid-divider" uk-grid>
            <div>
              <div class="im"></div>
              <div class="tit"></div>
              <div class="pri"></div>
            </div>
            <div>
            {% do action('cart_ajax_result_count') %}
            {% do action('cart_ajax_subtotal') %}
            </div>
          </div>
          <div class="uk-modal-footer ">
            <div>
              <a href="/cart" class="uk-button uk-button-default uk-width-auto">Go to Cart {% do action('cart_ajax_result_count') %}</a>
              <a href="/checkout" class="uk-button uk-button-primary uk-width-auto">Checkout</a>
            </div>
          </div>
        </div>
    </div>
    <div id="modal-quickview" class="uk-modal-full" uk-modal>
      <div class="uk-modal-dialog uk-modal-body">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="quickview-content">
        </div>
        <div id="loader" class="uk-hidden">
          <img data-src="/wp-content/themes/organicwp-theme/assets/images/spinner.gif" width="200" height="200" alt="" uk-img>
        </div>
      </div>
    </div>
    <!-- footer -->
    {% block footer %}
      {% include 'footer.twig' %}
    {% endblock %}
    <!-- /footer -->
  </div>
  <!-- /main site wrapper -->
  <!-- wp footer -->
  {{ function('wp_footer') }}
  <!-- /wp footer -->
</body>
<!-- /body -->
</html>

